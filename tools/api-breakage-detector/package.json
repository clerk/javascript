{
  "name": "@clerk/api-breakage-detector",
  "version": "1.0.0",
  "private": true,
  "description": "Tool to detect breaking changes in TypeScript package APIs",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "api-breakage-detector": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "cleanup": "node ./dist/cli.js cleanup",
    "detect": "node ./dist/cli.js detect",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "init": "node ./dist/cli.js init",
    "lint": "eslint src",
    "suppress": "node ./dist/cli.js suppress",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@microsoft/api-extractor": "^7.47.6",
    "@microsoft/api-extractor-model": "^7.29.4",
    "@octokit/rest": "^21.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "diff": "^7.0.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.0",
    "semver": "^7.6.0",
    "yaml": "^2.4.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/semver": "^7.5.0",
    "eslint": "^9.0.0",
    "tsup": "catalog:repo",
    "typescript": "catalog:repo",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
