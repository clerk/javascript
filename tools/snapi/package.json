{
  "name": "@clerk/snapi",
  "version": "1.0.0",
  "description": "Snapshot API (SNAPI) - Detect breaking changes in TypeScript package APIs",
  "type": "module",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "snapi": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "cleanup": "node ./dist/cli.js cleanup",
    "detect": "node ./dist/cli.js detect",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "health:storage": "node dist/cli.js storage health",
    "init": "node ./dist/cli.js init",
    "lint": "eslint src",
    "setup:gcs": "node scripts/setup-gcs.js",
    "storage:stats": "node dist/cli.js storage stats",
    "suppress": "node ./dist/cli.js suppress",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@microsoft/api-extractor": "^7.47.9",
    "@microsoft/api-extractor-model": "^7.29.4",
    "@octokit/rest": "^21.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "diff": "^7.0.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "semver": "^7.6.0",
    "yaml": "^2.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/semver": "^7.5.0",
    "eslint": "^9.0.0",
    "tsup": "catalog:repo",
    "typescript": "catalog:repo",
    "vitest": "^2.0.0"
  },
  "optionalDependencies": {
    "@google-cloud/storage": "^7.16.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
