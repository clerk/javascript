{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "inputs": [
        "src/**",
        "headless/**",
        "bundlewatch.config.json",
        "tsconfig.json",
        "tsconfig.declarations.json",
        "webpack.config.js",
        "!**/**/*.test.*",
        "!**/test/**",
        "!**/tests/**",
        "!**/__tests__/**",
        "!**/__mocks__/**",
        "!**/__snapshots__/**",
        "!coverage/**"
      ]
    },
    "test": {
      "inputs": [
        "src/**",
        "headless/**",
        "jest.*",
        "svgTransform.js",
        "webpack.config.js",
        "tsconfig.json",
        "tsconfig.test.json",
        "!**/__snapshots__/**",
        "!coverage/**"
      ]
    }
  }
}
