{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "inputs": [
        "**/package.json",
        "src/**",
        "!examples/**",
        "tsup.config.ts",
        "tsconfig.json",
        "tsconfig.declarations.json",
        "!**/**/*.test.*",
        "!**/test/**",
        "!**/tests/**",
        "!**/__tests__/**",
        "!**/__mocks__/**",
        "!**/__snapshots__/**"
      ]
    },
    "test": {
      "inputs": ["src/**", "jest.*", "tsup.config.ts", "tsconfig.*", "!**/__snapshots__/**", "!coverage/**"]
    }
  }
}
