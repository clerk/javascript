---
import type { ProtectProps } from '../../types';

type Props = Omit<ProtectProps, 'condition'>;

const { role, permission } = Astro.props;
---

<clerk-protect
  data-role={role}
  data-permission={permission}
>
  <!-- TODO: Can't have a data attribute in a Fragment. Remove div wrapper later. -->
  <div data-default-slot>
    <slot />
  </div>
  <div data-fallback-slot>
    <slot name="fallback" />
  </div>
</clerk-protect>
