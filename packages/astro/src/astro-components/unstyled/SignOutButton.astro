---
import type { HTMLTag, Polymorphic } from 'astro/types'
type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag; id?: string; redirectUrl?: string }>

import { customAlphabet, urlAlphabet } from "nanoid";

const safeId = customAlphabet(urlAlphabet, 10)();

const {
  as: Tag = 'button',
  id = safeId,
  redirectUrl,
  ...elementProps
} = Astro.props
---

<Tag {...elementProps} id={id}>
  <slot />
</Tag >

<script is:inline define:vars={{ redirectUrl, safeId }}>
  const btn = document.querySelector(`#${safeId}`);

  btn.addEventListener("click", () => {
    window.Clerk.signOut({ redirectUrl })
  });
</script>
