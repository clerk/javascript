{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "ES2019",
    "noEmitOnError": false,
    "incremental": false
  },
  "include": ["src"]
}
