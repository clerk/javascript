{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "./tests/dist",
    "target": "ES2020",
    "sourceMap": true,
    "paths": {
      "@clerk/shared/*": ["../shared/dist/*.js"]
    }
  },
  "include": ["src/**/__tests__"],
  "exclude": ["node_modules", "dist"]
}
