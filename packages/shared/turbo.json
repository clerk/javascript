{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "inputs": [
        "src/**",
        "global.d.ts",
        "tsup.config.ts",
        "tsconfig.json",
        "tsconfig.declarations.json",
        "!**/**/*.test.*",
        "!**/test/**",
        "!**/tests/**",
        "!**/__tests__/**",
        "!**/__mocks__/**",
        "!**/__snapshots__/**",
        "!coverage/**"
      ]
    },
    "test": {
      "inputs": [
        "src/**",
        "jest.*",
        "global.d.ts",
        "tsup.config.ts",
        "tsconfig.json",
        "tsconfig.*.json",
        "!**/__snapshots__/**",
        "!coverage/**"
      ]
    }
  }
}
