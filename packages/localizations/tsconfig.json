{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "ES2020",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declarationDir": "dist/types"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
