{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
