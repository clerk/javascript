{
  "include": ["src"],
  "exclude": ["dist", "esm", "src/__tests__"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "downlevelIteration": true,
    "inlineSources": true,
    "sourceMap": false,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
