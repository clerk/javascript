{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "types": [],
    "noEmit": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/**/*"]
}
