{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "inputs": [
        "src/**",
        "tsup.config.ts",
        "tsconfig.json",
        "tsconfig.declarations.json",

        "!coverage/**",
        "!src/**/*.test.*",
        "!src/**/__snapshots__/**"
      ]
    },
    "test": {
      "inputs": [
        "src/**",
        "jest.*",
        "tsup.config.ts",
        "tsconfig.json",
        "tsconfig.declarations.json",

        "!coverage/**",
        "!src/**/__snapshots__/**"
      ]
    }
  }
}
