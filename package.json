{
  "name": "@clerk/javascript",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "npm@8.4.1",
  "engines": {
    "node": ">=16.8.0",
    "npm": ">=8"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/config-lerna-scopes": "^16.0.0",
    "@types/node": "14.14.33",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "turbo": "^1",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "dev": "lerna run dev --parallel --scope @clerk/types --scope @clerk/clerk-react --scope @clerk/clerk-js",
    "lint-fix": "eslint . --ext .ts",
    "bump": "lerna version",
    "bump:next": "lerna version --conventional-prerelease",
    "graduate:next": "lerna version --conventional-graduate",
    "release": "lerna publish from-git",
    "prerelease": "turbo run build test",
    "release:next": "lerna publish from-package --dist-tag next",
    "prerelease:next": "turbo run build",
    "build": "turbo run build",
    "test": "turbo run test",
    "prepare": "husky install",
    "version": "./scripts/version-info.sh",
    "lerna": "lerna",
    "nuke": "rm -r node_modules; for d in packages/*/node_modules; do echo $d; rm -r $d; done"
  }
}
