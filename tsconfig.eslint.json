{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "packages/*/src",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/*/*.js",
    "integration/**/*.ts",
    "integration/**/*.tsx",
    "integration/*/*.js",
    ".eslintrc.js",
    "commitlint.config.js",
    "scripts/*.mjs"
  ]
}
