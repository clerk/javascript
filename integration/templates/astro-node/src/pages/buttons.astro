---
import { SignInButton, SignUpButton } from '@clerk/astro/components';

import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <SignInButton
    mode="modal"
    fallbackRedirectUrl="/user"
  >
    Sign in
  </SignInButton>

  <SignUpButton
    mode="modal"
    fallbackRedirectUrl="/user"
  >
    Sign up
  </SignUpButton>
</Layout>
