---

<div
  class="bg-gradient-to-r from-[#9D50BB] to-[#6E48AA] p-0.5 shadow-sm rounded-md w-fit mx-auto"
>
  <div class="flex items-center bg-zinc-900 rounded-[4px]">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="ml-4 mr-2 w-5"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-chevron-right"
    >
      <path d="m9 18 6-6-6-6"></path>
    </svg>
    <code data-copy>npm install @clerk/astro</code>
    <button
      class="p-4 active:scale-90 transition-transform"
      title="Copy to clipboard"
      data-copy-button
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-5"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-copy"
      >
        <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
        <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"
        ></path>
      </svg>
    </button>
  </div>
</div>

<script>
  const copyButton = document.querySelector(
    "[data-copy-button]",
  ) as HTMLButtonElement;
  const copyText = document.querySelector("[data-copy]")?.innerHTML;
  const copyContent = async (text: string) => {
    try {
      await navigator.clipboard.writeText(text);
    } catch (err) {}
  };

  copyButton?.addEventListener("click", () => {
    if (copyText) copyContent(copyText);
  });
</script>
